<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>dir</format>
	</formats>

	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*:jar</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<scope>compile</scope>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./</outputDirectory>
			<includes>
				<include>nginx:nginx-linux</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./console</outputDirectory>
			<includes>
				<include>uyun.bat:*console*:zip</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./dashboard</outputDirectory>
			<includes>
				<include>uyun.bat:*dashboard*:zip</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./datastore</outputDirectory>
			<includes>
				<include>uyun.bat:*datastore*:zip</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./gateway</outputDirectory>
			<includes>
				<include>uyun.bat:*gateway*:zip</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./monitor</outputDirectory>
			<includes>
				<include>uyun.bat:bat-monitor-impl*:zip</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./event</outputDirectory>
			<includes>
				<include>uyun.bat:*event*:zip</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./agent</outputDirectory>
			<includes>
				<include>uyun.bat:*agent*:zip</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./syndatabase</outputDirectory>
			<includes>
				<include>uyun.bat:*syndatabase*:zip</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./report</outputDirectory>
			<includes>
				<include>uyun.bat:*report*:zip</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>

		<!-- 与前端重名了，让座 -->
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./web-api</outputDirectory>
			<includes>
				<include>uyun.bat:*web*:zip</include>
			</includes>
			<!--去除openapi生成的html，统一发布到openapi文档目录下 -->
			<excludes>
				<exclude>uyun.bat:*swagger*:zip</exclude>
			</excludes>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<fileMode>0755</fileMode>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./web</outputDirectory>
			<includes>
				<include>uyun.bat:bat-front</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
		</dependencySet>

		<!--添加openapi文档自动构建 -->
		<dependencySet>
			<includes>
				<include>uyun.bat:*swagger*:zip</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./openapi</outputDirectory>
			<unpack>true</unpack>
			<scope>runtime</scope>
		</dependencySet>

		<!-- 添加agent依赖 start -->
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./downloads/agent/Windows</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-win</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-win32.msi</outputFileNameMapping>
		</dependencySet>
		<!-- 它其实是红帽子的... -->
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./downloads/agent/RedHat</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-redhat5_64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-rpm-x86_64-5.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./downloads/agent/RedHat</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-redhat64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-rpm-x86_64.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./downloads/agent/RedHat</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-redhat32</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-rpm-i386.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./downloads/agent/Debian</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-debian64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-deb-x86_64.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./downloads/agent/Debian</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-debian32</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-deb-i386.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./downloads/agent/Docker</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-docker</include>
			</includes>
			<outputFileNameMapping>docker-dd-agent.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./downloads/agent/SUSE</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-suse64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-suse-x86_64.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./downloads/agent/SUSE</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-suse10_64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-suse-x86_64-10.tar.gz</outputFileNameMapping>
		</dependencySet>
		<!-- 添加agent依赖 end -->
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>.</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>override</directory>
			<excludes>
				<exclude>**/README.md</exclude>
				<exclude>**/.gitignore</exclude>
			</excludes>
			<outputDirectory>.</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
