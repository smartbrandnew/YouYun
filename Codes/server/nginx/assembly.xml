<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<dependencySets>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>nginx:nginx-linux</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
		</dependencySet>
		
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/web</outputDirectory>
			<includes>
				<include>uyun.bat:bat-front</include>
			</includes>
			<unpack>true</unpack>
			<scope>runtime</scope>
		</dependencySet>

		<!-- 添加agent依赖 start -->
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/downloads/agent/Windows</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-win</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-win32.msi</outputFileNameMapping>
		</dependencySet>
		<!-- 它其实是红帽子的... -->
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/downloads/agent/RedHat</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-redhat5_64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-rpm-x86_64-5.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/downloads/agent/RedHat</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-redhat64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-rpm-x86_64.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/downloads/agent/RedHat</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-redhat32</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-rpm-i386.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/downloads/agent/Debian</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-debian64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-deb-x86_64.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/downloads/agent/Debian</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-debian32</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-deb-i386.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/downloads/agent/Docker</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-docker</include>
			</includes>
			<outputFileNameMapping>docker-dd-agent.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/downloads/agent/SUSE</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-suse64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-suse-x86_64.tar.gz</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>./nginx/bat/downloads/agent/SUSE</outputDirectory>
			<includes>
				<include>uyun.bat.agent:bat-agent-suse10_64</include>
			</includes>
			<outputFileNameMapping>Monitor-Agent-suse-x86_64-10.tar.gz</outputFileNameMapping>
		</dependencySet>
		<!-- 添加agent依赖 end -->
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>../build/override</directory>
			<excludes>
				<exclude>nginx/**</exclude>
			</excludes>
			<outputDirectory>./nginx/bat</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>override</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>omp</directory>
			<excludes>
				<exclude>**/README.md</exclude>
				<exclude>**/.gitignore</exclude>
			</excludes>
			<outputDirectory>.</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
