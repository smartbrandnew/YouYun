<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{yy-MM-dd HH:mm:ss.SSS} %-5level [%logger{36}] %msg%n
			</pattern>
		</encoder>
	</appender>

	<root>
		<level value="WARN" />
		<appender-ref ref="stdout" />
	</root>
	<logger name="com.broada" level="INFO" />
	
</configuration>
